doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Foundation 5 Template
    .row
      .small-2.columns
        button#one One
      .small-10.columns
        #one-response
    .row
      .small-2.columns
        button#two Two
      .small-10.columns
        #two-response
    .row
      .small-3.columns
        input#inputA(placeholder = 'number 1')
      .small-3.columns
        input#inputB(placeholder = 'number 2')
      .small-2.columns
        button#sum Sum
      .small-4.columns
        #answer
    .row
      .small-3.columns
        input#age(placeholder = 'age')
      .small-3.columns
        input#name(placeholder = 'name')
      .small-3.columns
        button#canDrink Can I Drink?
      .small-3.columns
        #display
    .row
      .small-4.columns
        input#numbers(placeholder = 'enter numbers')
      .small-2.columns
        button.radius#product Product
      .small-6.columns
        #productAnswer
    .row
      .small-4.columns
        input#names(placeholder = 'enter names')
      .small-2.columns
        button.radius#transform Calc
      .small-3.columns
        #answerA
      .small-3.columns
        #answerB

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')


doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Animal Shelter
    .row
      .small-12.columns
        #space
    form
      fieldset
        legend New Animal
        .row
          .small-5.small-centered.columns
            label Name
            input#name(type='text', placeholder='Max')
        .row
          .small-6.columns
            label Species
            input#species(type='text', placeholder='dog/cat...')
          .small-6.columns
            label Color
            input#color(type='text', placeholder='black')
          .small-1.columns
        .row 
          .small-6.columns
            label Age
            input#age(type='text', placeholder='7')
          .small-6.columns
            label Gender
            <input id="female" type="radio" value="female" name="gender"><label for="female">Female</label>
            <input id="male" type="radio" value="male" name="gender"><label for ="male">Male</label>
          .small-1.columns
        .row
          .small-12.columns
            label Description
            textarea#description(placeholder='Friendly, angry...')
        .row
          .small-12.columns
            label Photos
            #photocontain
        .row
          .small-12.columns
            .small-9.columns
              input#photoURL(type='text', placeholder='http://www.Example.com')
            .small-3.columns
              .button.postfix#addPhoto Add Photo
        .row
          .small-5.small-centered.columns
            button#addAnimal ADD ANIMAL
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()


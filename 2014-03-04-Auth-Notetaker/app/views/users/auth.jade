doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title=title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
    .row
      .small-12.columns
        button#newUserButton New User
        button#loginButton Login
    .row
      .small-4.columns
        form
          label Email
            input#newEmail(type='text', name='email', required)
          label Password
            input#newPassword(type='password', name='password', required)
    .row
      .small-4.columns
        form
          label Email
          input#loginEmail(type='text', name='email', required)
          label Password
          input#loginPassword(type='password', name='password', required)




    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

